            <references>
                <include name="${sooda.dir}/Sooda.dll" />
                <include name="${sooda.dir}/Sooda.UnitTests.BaseObjects.dll" />
                <include name="${sooda.dir}/Sooda.UnitTests.Objects.dll" />
